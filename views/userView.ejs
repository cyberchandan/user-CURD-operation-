<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>home-page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-medium { width: 18rem; }
    .card-img-top { 
      height: 160px; 
      object-fit: cover; 
      object-position: center; 
    }
  </style>
</head>
<body class="p-3">
  <div class="d-flex align-items-center gap-3 mb-3">
    <a href="/" class="btn btn-outline-primary btn-sm">‚Üê Back</a>
    <h1 class="m-0">Users</h1>
  </div>
  
  
  <% if (users.length === 0) { %>
  
    <div class="alert alert-warning text-center w-100">
      No user is created yet.
    </div>
  
  <% } else { %>
  
    <div class="d-flex flex-wrap gap-3">
      <% users.forEach(function(user){ %>
        <div class="card card-medium h-100 shadow-sm border-0">
          
          <img src="<%= user.Image %>" class="card-img-top" alt="<%= user.name %>">
  
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1"><%= user.name %></h5>
            <p class="card-text text-muted mb-3"><%= user.email %></p>
          
            <div class="d-flex gap-2 mt-auto">
              <a href="/edit/<%= user._id %>" class="btn btn-secondary btn-sm w-50">Edit</a>
              <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm w-50">Delete</a>
            </div>
          </div>
          
        </div>
      <% }) %>
    </div>
  
  <% } %>
  
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
